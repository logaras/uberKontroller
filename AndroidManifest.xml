<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ubercontroller"
          android:versionCode="1"
          android:versionName="1.0">
    <application android:label="ubercontroller" android:debuggable="true">
        <activity android:name="com.uberKontroller.Ubercontroller"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.uberKontroller.ControlActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.uberKontroller.CommunicationActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:enabled="true" android:name="com.uberKontroller.RestService"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>
